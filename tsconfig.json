{
  "compilerOptions": {
    "outDir": ".",
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": ["./**/node_modules"],
  "include": ["./src/**/*.ts"]
}
